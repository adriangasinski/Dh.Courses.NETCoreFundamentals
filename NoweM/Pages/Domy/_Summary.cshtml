@using NoweM.Core
@model House


<div class="panel panel-default">
    <div class="panel-heading">
        <h3>@Model.Address</h3>
    </div>
    <div class="panel-body">
        <span>Liczba budynków: @Model.NumberOfHouses</span>
        <span>Rodzaj zabudowy: @Model.HType</span>
    </div>
    <div class="panel-footer">
        
        <a class="btn btn-lg"
            asp-page="./Detail"
            asp-route-houseId="@Model.Id">
            <i class="glyphicon glyphicon-zoom-in"></i>
        </a>
        <a class="btn btn-lg"
            asp-page="./Edit"
            asp-route-houseId="@Model.Id">
            <i class="glyphicon glyphicon-edit"></i>
        </a>
        <a class="btn btn-lg"
            asp-page="./Delete"
            asp-route-houseId="@Model.Id">
            <i class="glyphicon glyphicon-trash"></i>
        </a>
        
    </div>
</div>

